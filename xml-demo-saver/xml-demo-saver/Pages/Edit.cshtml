@page "{userId}"
@model EditModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">XML Saver</h1>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Edit @Model.PassedUser.FirstName</h4>
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">ID </label>
                    <input type="text" class="form-control" asp-for="PassedUser.Id" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">First Name </label>
                    <input type="text" class="form-control" asp-for="PassedUser.FirstName" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Surname </label>
                    <input type="text" class="form-control" asp-for="PassedUser.SurName" placeholder="Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone Number </label>
                    <input type="tel" class="form-control" asp-for="PassedUser.PhoneNumber" placeholder="Phone Number">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>
